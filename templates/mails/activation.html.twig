{% extends 'base.html.twig' %}
{% block body %}
    {% apply inky_to_html|inline_css(source('@css/foundation-emails.css')) %}
        <container>
            <row>
                <columns>
                    <h1 class="text-center">Activation de votre compte</h1>
                    <p class="text-center">Votre compte a bien été créé !</p>
                    <p class="text-center">Cliquer sur le lien ci-dessu pour activer</p>
                </columns>
            </row>
            <spacer size="16"></spacer>
            <row>
                <columns>
                    <center>
                        <button class="rounded large" href="https://localhost:8000/activation/{{ token }}">Se connecter</button>
                    </center>
                </columns>
            </row>
        </container>
        <p>L'équipe Energy Fit Academy</p>
    {% endapply %}
{% endblock %}
