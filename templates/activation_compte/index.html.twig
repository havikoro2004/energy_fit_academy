{% extends 'base.html.twig' %}
{% block title %}Modification du mot de passe{% endblock %}
{% block body %}
        <h1 class="text-secondary text-center m-5">Modification du mot de passe</h1>
        <div class="m-5">
            {{ form_start(form) }}
            <div class="mx-4" id="errorsNewPassword">
                {# ********************* Les messages Flashe ******************* #}
                {% for message in app.flashes('success') %}
                    <div class="flash-notice text-center">
                        <div class="alert alert-success">{{ message }}</div>
                    </div>
                {% endfor %}
                {% for message in app.flashes('alert') %}
                    <div class="flash-notice text-center">
                        <div class="alert alert-danger">{{ message }}</div>
                    </div>
                {% endfor %}
                {% if form_errors(form.password) %}
                    <div class="alert alert-danger text-center">
                        {{ form_errors(form.password)  }}
                    </div>
                {% endif %}
                {{ form_label(form, 'Nouveau mot de passe')}}
                {{ form_widget(form.password , {'attr': {'placeholder': 'Ajouter un nouveau mot de passe','class':'form-control mb-2'}}) }}
            </div>
            <div class="mx-4">
                {{ form_label(form, 'Confirmermation du mot de passe')}}
                {{ form_widget(form.confirm_pass , {'attr': {'placeholder': 'Confirmer le nouveau mot de passe','class':'form-control mb-2'}}) }}
            </div>
            <button class="btn btn-primary mx-4 mb-5">Valider</button>
            {{ form_end(form) }}
        </div>
{% endblock %}
