<h3 class="text-center text-secondary my-5">Structures du partenaire</h3>
    <div class="grandDivCardPermissions my-4">
        <div class="cardBranchPermissions">
            <div class="imgActiveBtn">
                {% if branche.getImageName() %}
                    <img class="list-group border border-secondary imgHover" width="200px" height="160px" src="/images/structure_logo/{{ branche.getImageName() }}">
                {% else %}
                    <img class="list-group border border-secondary imgHover" width="200px" height="160px" src="{{ asset('build/images/strucDefault.jpg') }}">
                {% endif %}
                <div class="form-check form-switch ms-3">
                    <input disabled{% if branche.isActive()%} checked {% endif %}  class="form-check-input activeBranch" type="checkbox" role="switch">
                    <label class="form-check-label text-secondary" >{% if branche.isActive %} On {% else%}Off {% endif %}</label>
                </div>
            </div>
            <div>
                <ul class="list-unstyled">
                    <li class="m-2">Structure Id :{{ branche.id }}</li>
                    <li class="m-2">Adresse :{{ branche.adress }}</li>
                    <li class="m-2">Manager : {% if branche.getUser() %}{{ branche.getUser().getEmail() }} {% else %}
                            <span class="text-danger">Non fourni</span>{% endif %}</li>
                    <li class="m-2">Date de cr√©ation :{{ branche.getCreatedAt()|date('d-m-Y ') }}</li>
                </ul>
            </div>
            <div id="name={{ branche.id}}" class="editPermissionsBranch">
                {% include 'components/guest/branch/_permissions_branche.html.twig' %}
            </div>
        </div>
    </div>

